name=libarchive
version=3.4.3
source=(http://www.libarchive.org/downloads/$name-$version.tar.xz)

build() {
cd $name-$version

./configure --prefix=/tools \
	--without-xml2 --without-expat \
	--without-openssl --disable-acl \
	--disable-bsdcpio \
	--disable-xattr \
	--without-iconv --without-bz2lib
make
make install
}
